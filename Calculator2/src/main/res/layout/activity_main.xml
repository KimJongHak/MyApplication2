<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivyty"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/main1"
    android:shrinkColumns="*"
    android:layout_margin="5dp">

    <TableRow>
        <EditText
            android:id="@+id/et1"
            android:layout_span="5"
            android:hint="숫자1 입력"/>
    </TableRow>
    <TableRow>
        <EditText
            android:id="@+id/et2"
            android:layout_span="5"
            android:hint="숫자2 입력"/>
    </TableRow>
    <TableRow>
       <Button
            android:text="0"
            android:id="@+id/b0" />
        <Button
            android:text="1"
            android:id="@+id/b1" />
        <Button
            android:text="2"
            android:id="@+id/b2" />
        <Button
            android:text="3"
            android:id="@+id/b3" />
        <Button
            android:text="4"
            android:id="@+id/b4" />
    </TableRow>
    <TableRow>
        <Button
            android:text="5"
            android:id="@+id/b5" />
        <Button
            android:text="6"
            android:id="@+id/b6" />
        <Button
            android:text="7"
            android:id="@+id/b7" />
        <Button
            android:text="8"
            android:id="@+id/b8" />
        <Button
            android:text="9"
            android:id="@+id/b9" />
    </TableRow>
    <TableRow>
        <Button
            android:layout_span="5"
            android:text="더하기"
            android:id="@+id/add" />
    </TableRow>
    <TableRow>
        <Button
            android:text="빼기"
            android:id="@+id/sub"
            android:layout_span="5" />
    </TableRow>
    <TableRow>
        <Button
            android:text="곱하기"
            android:id="@+id/mul"
            android:layout_span="5" />
    </TableRow>
    <TableRow>
        <Button
            android:text="나누기"
            android:id="@+id/div"
            android:layout_span="5" />
    </TableRow>
    <TableRow>
        <TextView
            android:text="계산 결과 : "
            android:id="@+id/tv"
            android:layout_span="5"
            android:textColor="#ff0000"
            android:textSize="20sp" />
    </TableRow>
</TableLayout>
