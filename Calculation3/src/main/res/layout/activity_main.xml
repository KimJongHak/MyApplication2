<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivyty"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/main1"
    android:orientation="vertical"
    android:rowCount="9"
    android:columnCount="5">

    <EditText
        android:id="@+id/et1"
        android:layout_columnSpan="5"
        android:layout_gravity="fill_horizontal"
        android:hint="숫자1 입력"/>
    <EditText
        android:id="@+id/et2"
        android:layout_columnSpan="5"
        android:layout_gravity="fill_horizontal"
        android:hint="숫자2 입력"/>
    <Button
        android:layout_width="65dp"
        android:text="0"
        android:layout_row="2"
        android:layout_column="0"
        android:id="@+id/b0" />
    <Button
        android:layout_width="64dp"
        android:text="1"
        android:layout_row="2"
        android:layout_column="1"
        android:id="@+id/b1" />
    <Button
        android:layout_width="64dp"
        android:text="2"
        android:layout_row="2"
        android:layout_column="2"
        android:id="@+id/b2" />
    <Button
        android:layout_width="64dp"
        android:text="3"
        android:layout_row="2"
        android:layout_column="3"
        android:id="@+id/b3" />
    <Button
        android:layout_width="64dp"
        android:text="4"
        android:layout_row="2"
        android:layout_column="4"
        android:id="@+id/b4" />
    <Button
        android:layout_width="64dp"
        android:text="5"
        android:layout_row="3"
        android:layout_column="0"
        android:id="@+id/b5" />
    <Button
        android:layout_width="64dp"
        android:text="6"
        android:layout_row="3"
        android:layout_column="1"
        android:id="@+id/b6" />
    <Button
        android:layout_width="64dp"
        android:text="7"
        android:layout_row="3"
        android:layout_column="2"
        android:id="@+id/b7" />
    <Button
        android:layout_width="64dp"
        android:text="8"
        android:layout_row="3"
        android:layout_column="3"
        android:id="@+id/b8" />
    <Button
        android:layout_width="64dp"
        android:text="9"
        android:layout_row="3"
        android:layout_column="4"
        android:id="@+id/b9" />
    <Button
        android:layout_row="4"
        android:layout_column="0"
        android:layout_columnSpan="5"
        android:layout_gravity="fill_horizontal"
        android:text="더하기"
        android:id="@+id/add" />
    <Button
        android:text="빼기"
        android:id="@+id/sub"
        android:layout_row="5"
        android:layout_column="0"
        android:layout_columnSpan="5"
        android:layout_gravity="fill_horizontal" />
    <Button
        android:text="곱하기"
        android:id="@+id/mul"
        android:layout_row="6"
        android:layout_column="0"
        android:layout_columnSpan="5"
        android:layout_gravity="fill_horizontal" />
    <Button
        android:text="나누기"
        android:id="@+id/div"
        android:layout_row="7"
        android:layout_column="0"
        android:layout_columnSpan="5"
        android:layout_gravity="fill_horizontal" />
    <TextView
        android:text="계산 결과 : "
        android:id="@+id/tv"
        android:layout_row="8"
        android:layout_column="0"
        android:layout_columnSpan="5"
        android:layout_gravity="fill_horizontal"
        android:textColor="#ff0000"
        android:textSize="20sp" />
</GridLayout>
